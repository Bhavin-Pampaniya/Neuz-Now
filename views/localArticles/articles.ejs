<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- CSS only -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi"
      crossorigin="anonymous"
    />
    <!-- <script src="script.js" defer></script> -->
    <title>Neuz Now - Get daily real time news global and local</title>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container-fluid">
        <a class="navbar-brand" href="/">Neuz-Now</a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarSupportedContent"
          aria-controls="navbarSupportedContent"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0" id="ul">
            <li class="nav-item">
              <a class="nav-link" aria-current="page" href="/" id="home"
                >Home</a
              >
            </li>
            <li class="nav-item">
              <a class="nav-link" id="int" href="/category/international"
                >International</a
              >
            </li>
            <li class="nav-item">
              <a class="nav-link" id="int" href="/category/sports">Sports</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" id="int" href="/category/entertainment"
                >Entertainment</a
              >
            </li>
            <li class="nav-item">
              <a class="nav-link" id="int" href="/category/business"
                >Business</a
              >
            </li>
            <li class="nav-item">
              <a class="nav-link" id="int" href="/category/technology"
                >Technology</a
              >
            </li>
            <li class="nav-item">
              <a class="nav-link" id="int" href="/category/science">Science</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" id="int" href="/category/health">Health</a>
            </li>
            <li class="nav-item">
              <a class="nav-link active" id="int" href="/admin/category/local"
                >Local News</a
              >
            </li>
          </ul>
          <% if(locals.name) { %> 
            <div class="mx-1">
                <h2><span class="badge bg-secondary"> <%= name %>  </span></h2>
            </div>
            <% } %>
          <% if(locals.admin) { %> 
          <div class="mx-1">
            <a class="btn btn-primary" href="/logout" role="button">Logout</a>
          </div>
          <% } else { %>
          <div class="mx-1">
            <a class="btn btn-secondary" href="/login" role="button">Login</a>
          </div>
          <div class="mx-1">
            <a class="btn btn-secondary" href="/loginadmin" role="button"
              >Login For Admin</a
            >
          </div>
          <div class="mx-1">
            <a class="btn btn-secondary" href="/signup" role="button">Sign Up</a>
          </div>
          <% } %>
        </div>
      </div>
    </nav>
    <div class="container">
      <h1 class="my-2 text-center">Neuz Now - Local News</h1>
      <% if(locals.admin) { %> 
      <div class="d-flex justify-content-center">
          <div class="my-5 text-center" style=" width:22rem ">
              <div class="card text-center">
                  <div class="card-header">
                      <h5 class="card-title">ADD NEW NEWS</h5>
                  </div>
                  <div class="card-body">
                      <a class="btn btn-success mx-1" href="#" role="button">CLICK HERE TO ADD</a>
                  </div>
              </div>
          </div>
        </div>
        <% } %> 
      <div class="row">
        <% if(articles) { %> 
        <% articles.forEach(article => { %>
        <div class="col-md-3 my-4">
          <div class="card" style="width: 18rem;">
            <img
            src="<%=article.urlToImage?article.urlToImage:"https://img.etimg.com/thumb/msid-95524313,width-1070,height-580,imgsize-121724,overlay-economictimes/photo.jpg"
            %> " class="card-img-top" alt="..." />
            <div class="card-body">
              <h5 class="card-title">
                <%= article.title? article.title.slice(0,50):"OOPS!! API error"
                %>...
              </h5>
              <p class="card-text">
                <%= article.description ?
                article.description.slice(0,120):"OOPS!! API error" %>...
              </p>
            </div>
            <% if(locals.admin) { %> 
            <div class="d-flex container my-2">
              <a class="btn btn-primary mx-1" href="#" role="button">Edit</a>
              <a class="btn btn-danger mx-1" href="#" role="button">Delete</a>
            </div>
            <% } %> 
          </div>
        </div>
        <% }) %>
        <% } else { %> 
            <div class="container my-4 text-center">
              <!-- <h4>No news to show.</h4> -->
              <h2><span class="badge text-bg-primary">No news to show.</span></h2
            </div>
          <% } %> 
      </div>
    </div>

    <!-- JavaScript Bundle with Popper -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
